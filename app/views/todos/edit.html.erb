<% provide(:title, 'Edit Todo') %>
<h1>Edit</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @todo do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :subject %>
            <%= f.text_field :subject, class: 'form-control' %>
            
            <%= f.label :due_date %>
            <%= f.text_field :due_date, class: 'form-control' %>

            <%= f.label :recurrence %>
            <%= f.select :recurrence, [['None', 0], ['Daily', 1], ['Weekly', 2], ['Every 2 Weeks', 3]], {}, {class: 'form-control'} %>

            <%= f.label 'Status' %>
            <%= f.label 'Is Complete?', class: "checkbox inline", style: 'margin-top: 3px;' do %>
                <%= f.check_box :is_complete, style: 'width:20px;' %>
                <span>Is Complete?</span>
            <% end %>

            <hr />
            
            <%= f.submit "Save", class: "btn btn-primary" %>
            <p>&nbsp;</p>
            <%= link_to "Skip", todo_skip_path(@todo), method: :put, class: 'btn btn-info btn-block' %>
            <%= link_to "Delete", @todo, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-block' %>
        <% end %>
    </div>
</div>

<script>
		$(function(){
			$('#todo_due_date').datepicker();
        });
</script>